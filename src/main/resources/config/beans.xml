    <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="staticMethod" value="com.cedarsoftware.ncube.NCubeManager.setNCubePersister"/>
        <property name="arguments">
            <list>
                <ref bean="persister"/>
            </list>
        </property>
    </bean>

